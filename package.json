{
  "name": "@ghawn-say/components",
  "license": "MIT",
  "version": "0.0.4",
  "description": "Simple React components built with shadcn/ui and Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react,react-dom",
    "build:css": "postcss src/styles.css -o dist/styles.css",
    "build:all": "bun run build && bun run build:css",
    "release": "bun run build:all && changeset publish",
    "lint": "tsc"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.8"
  }
}
